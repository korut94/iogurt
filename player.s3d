#ifndef PLAYER_H
#define PLAYER_H

class Player
{
	var m_device;
	
	/*
	 * @brief The function is called by the applicaion when the
	 * event loop is restarted
	 */
	restart();
	processEvent(queue, eventId, wparam, lparam, window);
};

function Player::Player(device) {
	m_device = device;
}

function Player::restart() {
	m_device.restart();
}

function Player::processEvent(queue, eventId, wparam, lparam, window) {
	var command = m_device.translate(eventId, wparam, lparam, window);
	
	// Any command in ignored status will be rejected
	if (command.isAccepted() == true) {
		queue.push(command);
	}
}

#endif // PLAYER_H

#ifndef SCAN_H
#define SCAN_H

class Scan
{
	var m_panel;
	var m_radius;
	var m_step;
	
	apply();
};

function Scan::Scan(panel, radius) {
	m_panel = panel;
	m_radius = radius;
	
	// Number between 0 and 1.
	m_step = 0;
}

function Scan::apply() {
	m_step += 0.05;
	
	m_panel.getCVmObj().SetPosition(m_radius * [cos(PI * m_step), 0, sin(PI * m_step)]);
	m_panel.getCVmObj().SetRotation(180 * (0.5 - m_step), [0,1,0]);
}

#endif // SCAN_H

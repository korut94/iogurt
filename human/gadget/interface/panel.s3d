#ifndef PANEL_H
#define PANEL_H

#include "../../../scene/object.s3d"

class Panel : Object
{
	var m_height;
	var m_width;
};

function Panel::Panel() {
	m_height = 1.2;
	m_width = 1.5;
	
	var mesh = CVmNewMesh(VRP_PLANE, 0, [0,0,0], [m_width, m_height, 0], 2, 0);
	mesh.Rotate(180, [0,1,0]);
	
	Panel::this.getCVmObj().LinkToMesh(mesh);
	
	mesh.CenterBoundingBox();
}

#endif // PANEL_H

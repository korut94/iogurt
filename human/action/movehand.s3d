#ifndef MOVEHAND_H
#define MOVEHAND_H

class MoveHand
{
	var m_eye;
	var m_hand;
	var m_start;
	
	apply(options);
};

function MoveHand::MoveHand(hand, eye) {
	m_hand = hand;
	m_eye = eye;
	
	m_start = hand.getCVmObj().GetPosition();
}

function MoveHand::apply(options) {
	var window = options[0];
	m_hand.getCVmObj().SetPosition(window.mouseWorldPos(2.0));
}

#endif // MOVEHAND_H

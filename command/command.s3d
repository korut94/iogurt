#ifndef COMMAND_H
#define COMMAND_H

class Command
{
	var m_action;
	var m_target;
	
	action();
	target();
	isAccepted();
};

class CmdIgnore {
	isAccepted();
};

function Command::Command(action, target) {
	m_action = action;
	m_target = target;
}

function Command::action() {
	return m_action;
}

function Command::target() {
	return m_target;
}

function Command::isAccepted() {
	return true;
}

function CmdIgnore::isAccepted() {
	return false;
}

#endif // COMMAND_H

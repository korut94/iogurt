#ifndef MOVE_H
#define MOVE_H

/**
 * @brief The Move class defines the command to set,
 * respect the actual object's direction, the velocity of the body.
 */
class Move
{
	// Scalar value with the module of the direction vector
	var m_velocity;
	
	apply(target);
};

function Move::Move(velocity) {
	m_velocity = velocity;
}

function Move::apply(target) {
	target.getBody().setVelocity(m_velocity);
}

#endif // MOVE_H
